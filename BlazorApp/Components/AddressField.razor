
<div class="form-group row">
    <label class="col-sm-4 col-lg-3 col-form-label required">Street</label>
    <div class="col-5">
        <InputText class="form-control" @bind-Value="@Address.Street" />
    </div>
    <label class="col-auto col-form-label required">No.</label>
    <div class="col">
        <InputNumber TValue="int" class="form-control" @bind-Value="@Address.Number" />
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-4 col-lg-3 col-form-label required">Zip</label>
    <div class="col-5">
        <InputText class="form-control" @bind-Value="@Address.Zip" />
    </div>
</div>

@code{
    [Parameter] public DbDesign.Entities.ValueObjects.Address Address { get; set; } 
}
